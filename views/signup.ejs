<% layout('layout') -%>


<div class="container signup-container">
    <h3 class="text-center pb-3">SignUp</h3>
    <div class="row">
        <div class="col lg-4 col-md-offset-3">
            <% if(errors.length>0){ %>
                <div class="alert alert-danger alert-dismissible">
                    <button class="close" type="button" data-dismissible="alert" >
                        <span>&times;</span>
                    </button>
                    <%= errors %>
                </div>

            
            <%}%>
            <form action="" method="post">
                <div class="form-group">
                    <input type="text" class="form-control form-control-sm" name="name" placeholder="Full Name">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control form-control-sm" name="email" placeholder="Email address">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-sm" name="password" placeholder="Password">
                </div>
                <button class="btn btn-dark" type="submit">SignUp</button>
            </form>
        </div>
    </div>
</div>

